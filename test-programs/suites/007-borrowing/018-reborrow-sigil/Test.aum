module body Test is
    record Foo: Linear is
        value: Int32;
    end;

    generic [R: Region]
    function show(a: &![Foo, R]): Unit is
        print("value = ");
        printLn(a->value);
        return nil;
    end;

    function main(): ExitCode is
        var foo: Foo := Foo(value => 10);
        borrow! foo as fooref in R do
            show(reborrow(fooref));
            show(reborrow(fooref));
            show(reborrow(fooref));
        end;
        let { value: Int32 } := foo;
        return ExitSuccess();
    end;
end module body.
